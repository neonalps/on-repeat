{
    "compilerOptions": {
        "target": "es2017",
        "lib": [
            "es6"
        ],
        "paths": {
            "@src/*": ["src/*"],
            "@config/*": ["src/config/*"],
            "@crypto/*": ["src/crypto/*"],
            "@db/*": ["src/db/*"],
            "@http/*": ["src/http/*"],
            "@log/*": ["src/log/*"],
            "@jobs/*": ["src/jobs/*"],
            "@provider/*": ["src/provider/*"],
            "@router/*": ["src/router/*"]
        },
        "baseUrl": ".",
        "module": "commonjs",
        "rootDir": "src",
        "resolveJsonModule": true,
        "allowJs": true,
        "outDir": "build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true
    }
}